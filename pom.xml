<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- 1. 继承 Spring Boot 官方父项目 (按你文档要求的 3.5.0) -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.0</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>xyz.graygoo401</groupId>
    <artifactId>Community_Shop_Backend</artifactId>
    <version>2.0.0-SNAPSHOT</version>

    <!-- 2. 核心：打包方式必须是 pom -->
    <packaging>pom</packaging>

    <name>Community_Shop_Backend</name>
    <description>Community_Shop_Backend</description>
    <url>https://github.com/Arrhenius401/community_shop_backend</url>
    <licenses>
        <license/>
    </licenses>
    <developers>
        <developer>
            <id>graygoo401</id>
            <name>graygoo401</name>
            <email>17268287727@163.com</email>
            <roles>
                <role>developer</role>
                <role>maintainer</role>
            </roles>
            <organization>NEU</organization>
        </developer>
    </developers>

    <!-- 3. 定义子模块（文件夹名称必须一致） -->
    <modules>
        <module>community-shop-common</module>
        <module>community-shop-api</module>
        <module>community-shop-user</module>
        <module>community-shop-trade</module>
        <module>community-shop-infra</module>
        <module>community-shop-community</module>
        <module>community-shop-ai</module>
    </modules>

    <scm>
        <connection/>
        <developerConnection/>
        <tag/>
        <url/>
    </scm>

    <properties>
        <java.version>21</java.version>
        <mockito.version>4.11.0</mockito.version>
        <spring-ai.version>1.0.3</spring-ai.version>

        <lombok.version>1.18.30</lombok.version>
        <mybatis.version>3.0.3</mybatis.version>
        <mybatis-plus.version>3.5.6</mybatis-plus.version>
        <fastjson.version>1.2.83</fastjson.version>
        <springdoc.version>2.7.0</springdoc.version>
        <jwt.version>0.11.5</jwt.version>

        <spring-cloud.version>2024.0.0</spring-cloud.version>
        <spring-cloud-alibaba.version>2023.0.1.3</spring-cloud-alibaba.version>
    </properties>

    <repositories>
        <!-- 阿里云公共仓库 -->
        <repository>
            <id>aliyun-public</id>
            <name>Aliyun Public Repository</name>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <!-- 阿里云 Spring 仓库（若使用 Spring 相关依赖） -->
        <repository>
            <id>aliyun-spring</id>
            <name>Aliyun Spring Repository</name>
            <url>https://maven.aliyun.com/repository/spring</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <!-- 插件仓库也需要配置，否则 Maven 插件可能仍从国外下载 -->
        <pluginRepository>
            <id>aliyun-plugin</id>
            <name>Aliyun Plugin Repository</name>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <!-- 4. 依赖管理：只定义版本，不实际引入 JAR 包 -->
    <!-- 引入 BOM（Bill of Materials 物料清单）统一管理版本，它的作用是统一管理 Spring AI 相关组件的版本，避免版本冲突 -->
    <dependencyManagement>
        <dependencies>

            <!-- 内部模块依赖 -->
            <dependency>
                <groupId>xyz.graygoo401</groupId>
                <artifactId>community-shop-common</artifactId>
                <version>2.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>xyz.graygoo401</groupId>
                <artifactId>community-shop-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>xyz.graygoo401</groupId>
                <artifactId>community-shop-infra</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- lombok -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>

            <!-- MyBatis -->
            <dependency>
                <groupId>org.mybatis</groupId>
                <artifactId>mybatis-spring</artifactId>
                <version>${mybatis.version}</version>
            </dependency>
            <!-- MyBatis-Plus -->
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-boot-starter</artifactId>
                <version>${mybatis-plus.version}</version>
            </dependency>
            <!-- MyBatis-Plus 测试支持 -->
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-boot-starter-test</artifactId>
                <version>${mybatis-plus.version}</version>
                <scope>test</scope>
            </dependency>

            <!-- FastJSON -->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>fastjson</artifactId>
                <version>${fastjson.version}</version>
            </dependency>

            <!-- Swagger/SpringDoc（接口文档生成） -->
            <dependency>
                <groupId>org.springdoc</groupId>
                <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
                <version>${springdoc.version}</version>
            </dependency>

            <!-- JWT -->
            <dependency>
                <groupId>io.jsonwebtoken</groupId>
                <artifactId>jjwt-api</artifactId>
                <version>${jwt.version}</version>
            </dependency>
            <dependency>
                <groupId>io.jsonwebtoken</groupId>
                <artifactId>jjwt-impl</artifactId>
                <version>${jwt.version}</version>
                <scope>runtime</scope>
            </dependency>
            <dependency>
                <groupId>io.jsonwebtoken</groupId>
                <artifactId>jjwt-jackson</artifactId>
                <version>${jwt.version}</version>
                <scope>runtime</scope>
            </dependency>

            <!-- Spring AI -->
            <dependency>
                <groupId>org.springframework.ai</groupId>
                <artifactId>spring-ai-bom</artifactId>
                <version>${spring-ai.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- Spring Cloud 版本管理 -->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- Spring Cloud Alibaba (Nacos) -->
            <dependency>
                <groupId>com.alibaba.cloud</groupId>
                <artifactId>spring-cloud-alibaba-dependencies</artifactId>
                <version>${spring-cloud-alibaba.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <!-- 编译插件：解决 Lombok 与 MapStruct 注解处理器冲突 -->
            <!-- 必须配置编译插件，否则会导致 Lombok 和 MapStruct 的注解处理器执行顺序混乱，出现编译错误（如类找不到、方法未生成等） -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version> <!-- 稳定版本，适配 JDK 8+ -->
                <configuration>
                    <!-- 指定 JDK 版本（需与项目实际使用版本一致） -->
                    <source>${java.version}</source> <!-- 引用上面定义的 21 -->
                    <target>${java.version}</target>
                    <release>${java.version}</release> <!-- 关键：启用 JDK 9+ 的模块化编译 -->
                    <!-- 编码格式 -->
                    <encoding>UTF-8</encoding>
                    <!-- 注解处理器路径：必须严格按此顺序配置 -->
                    <annotationProcessorPaths>
                        <!-- 1. 先执行 Lombok 处理器（解析 @Data 等注解） -->
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>1.18.30</version> <!-- 与依赖版本一致 -->
                        </path>
                        <!-- 2. 再执行 MapStruct 处理器（生成转换代码） -->
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>1.6.0.Beta2</version> <!-- 与依赖版本一致 -->
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>

            <!-- 解决出现 Mockito 动态附加 Agent 警告的问题，需在构建工具中显式配置 Mockito Agent -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                    <!-- 添加允许动态加载 Agent 的参数 -->
                    <argLine>-XX:+EnableDynamicAgentLoading</argLine>
                </configuration>
            </plugin>

            <!-- 配置 Maven Surefire 插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                    <!-- 核心配置：无测试用例时不失败 -->
                    <failIfNoTests>false</failIfNoTests>
                    <!-- 可选：跳过测试执行（如果不需要运行任何测试） -->
                    <!-- <skipTests>true</skipTests> -->
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
